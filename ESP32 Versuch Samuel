#include <SPI.h>
#include <mcp2515.h>

struct can_frame canMsg;
MCP2515 mcp2515(5);  // Der CS-Pin ist auf GPIO 5 gesetzt

void setup() {
    Serial.begin(115200);
    SPI.begin();
    
    // Initialisiere das MCP2515-Modul
    mcp2515.reset();
    mcp2515.setBitrate(CAN_250KBPS, MCP_8MHZ); // 500 kbps bei 8 MHz Quarz
    mcp2515.setNormalMode();
    
    Serial.println("MCP2515 Initialisiert!");
}

void loop() {
    if (mcp2515.readMessage(&canMsg) == MCP2515::ERROR_OK) {
        // Wenn eine Nachricht empfangen wird, zeige sie an
        Serial.print("ID: ");
        Serial.print(canMsg.can_id, HEX);
        Serial.print(" DLC: ");
        Serial.print(canMsg.can_dlc);
        Serial.print(" Data: ");
        for (int i = 0; i < canMsg.can_dlc; i++) {
            Serial.print(canMsg.data[i], HEX);
            Serial.print(" ");
        }
        Serial.println();
    }
}
